\newcommand{\pf}[2]{%
\plainframe{\begin{center}~\par~\par~\par\scalebox{#1}{\textbf{#2}}\end{center}}}

\renewcommand{\baselinestretch}{1.25}

% 文字列の背景に色をつけるコマンド
\newcommand{\setbg}[2][main!20]{\tikz[baseline=(X.base)]\node[fill=#1](X){#2};}
